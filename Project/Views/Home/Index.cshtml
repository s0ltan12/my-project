@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-success">Welcome to Our Store!</h1>
        <p class="lead text-muted">
            Discover amazing products, manage your account, and enjoy a seamless shopping experience with our ASP.NET Core MVC web app.
        </p>
        <a href="/Product/Index" class="btn btn-success btn-lg mt-3">Browse Products</a>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-check display-4 text-success mb-3"></i>
                    <h5 class="card-title">User Accounts</h5>
                    <p class="card-text">Register and manage your personal profile with ease and security.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-bag-check display-4 text-success mb-3"></i>
                    <h5 class="card-title">Product Management</h5>
                    <p class="card-text">Add, edit, and delete products with simple and clear controls.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-lock display-4 text-success mb-3"></i>
                    <h5 class="card-title">Secure Login</h5>
                    <p class="card-text">Login securely to access and manage your personalized content.</p>
                </div>
            </div>
        </div>
    </div>
</div>
