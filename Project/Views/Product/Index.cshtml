@model List<Project.Models.Product>

@{
    ViewData["Title"] = "All Products";
}

<h2 class="mb-4">All Products</h2>

<a href="/Product/Create" class="btn btn-success mb-3">➕ Add New Product</a>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a href="/Product/Details/@item.ProductId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Product/Edit/@item.ProductId" class="btn btn-warning btn-sm mx-1">Edit</a>
                    <a href="/Product/Delete/@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
